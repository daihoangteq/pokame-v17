{
  "compilerOptions": {
     "target": "ES2020",
     "useDefineForClassFields": true,
     "lib": ["ES2020", "DOM", "DOM.Iterable", "ES2021.String"],
     "module": "ESNext",
     "skipLibCheck": true,
 
     /* Bundler mode */
     "moduleResolution": "bundler",
     "allowImportingTsExtensions": true,
     "resolveJsonModule": true,
     "isolatedModules": true,
     "noEmit": true,
     "jsx": "react-jsx",
 
     /* Linting */
     "strict": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noFallthroughCasesInSwitch": true,
 
     /* Imports */
     "baseUrl": ".",
     "paths": {
       "@src/*": ["./src/*"]
     }
   },
   "include": [
     "src",
     "vite.config.ts",
     // If TailwindCSS is utilized
     "postcss.config.js",
     "tailwind.config.ts"
   ]
 }
 
 